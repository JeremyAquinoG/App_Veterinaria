<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Imagen del logo de la empresa en la parte superior -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_ohmydog2"
            android:layout_marginBottom="-14dp"/>

        <!-- Cuadro turquesa que contiene campos y botón -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_cuadro2"
            android:padding="24dp">

            <!-- Título de la vista -->
            <TextView
                android:id="@+id/agendar_cita_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Agendar Cita"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Campo de Nombre de la Mascota -->
            <EditText
                android:id="@+id/et_mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de la Mascota"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo de Veterinario (Spinner) -->
            <Spinner
                android:id="@+id/spinner_veterinario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:entries="@array/veterinario_array" />

            <!-- Campo de Fecha de la Cita -->
            <EditText
                android:id="@+id/et_fecha_cita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de la Cita"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo de Hora de la Cita -->
            <!-- Campo de Hora de la Cita -->
            <Spinner
                android:id="@+id/spinner_hora_cita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />



            <!-- Campo de Motivo de la Cita -->
            <EditText
                android:id="@+id/et_motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Motivo de la Cita"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Botón de Agendar Cita -->
            <Button
                android:id="@+id/btn_agendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendar Cita"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
